[module/date]
type = internal/date
interval = 5

date = "%d-%m-%Y"
;date-alt = " %Y-%m-%d"

time = %H:%M
#time-alt = %H:%M:%S

;format-prefix = ÓÄñ
format-prefix-foreground = ${colors.foreground-alt}
